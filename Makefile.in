SRCS = rep-gtk.c gtk-support.c gtk-compat.c gtk-glue.c
OBJS = $(SRCS:.c=.lo)
OUT  = libgtk.la

version=@version@
version_major=@version_major@
version_minor=@version_minor@
host_type=@host@
SHELL=/bin/sh

repexecdir=@repexecdir@
include $(repexecdir)/rules.mk

CC=@CC@
CPPFLAGS=-DHAVE_CONFIG_H -I. @CPPFLAGS@
CFLAGS=@GTK_CFLAGS@ @CFLAGS@
LDFLAGS=@LDFLAGS@
LIBS=@GTK_LIBS@ @LIBS@

INSTALL=@INSTALL@
INSTALL_DATA=@INSTALL_DATA@
INSTALL_PROGRAM=@INSTALL_PROGRAM@

top_builddir=.
VPATH=@top_srcdir@:.

.PHONY: clean realclean install

all : $(OUT)

$(OUT) : $(OBJS)
	$(rep_DL_LD) $(CPPFLAGS) $(CFLAGS) -o $@ $^ $(LIBS)

gtk-glue.c : gtk-1.2.defs.jl gdk-1.2.defs.jl build-gtk.jlc
	rep --batch -l build-gtk -f build-gtk-batch $< $@

%.defs.jl : %.defs
	sed -f sed-fix-defs $< >$@

build-gtk.jlc : build-gtk.jl
	rep --batch -l compiler -f compile-batch $<

install : all
	$(rep_DL_INSTALL) $(OUT) $(repexecdir)

uninstall :
	$(rep_DL_UNINSTALL) $(repexecdir) $(OUT)

clean :
	rm -f *.defs.jl gtk-glue.c *~ core *.jlc *.o *.lo *.la
	rm -rf .libs

realclean : clean
	rm -f Makefile config.cache config.log config.status config.h libtool

cvsclean : realclean
	rm -f aclocal.m4 configure
